<p id="notice"><%= notice %></p>

<table class="table">
<tr>
<th>
  <%= t('view.taskname') %>
  </th>
  <td>
  <%= @task.name %>
</td>
</tr>
<tr>
<th>
  <%= t('view.taskdetail') %>
</th>
<td>
  <%= @task.detail %>
</td>
</tr>
<tr>
<th>
  <%= t('view.endtime') %>
</th>
<td>
  <%= @task.endtime %>
</td>
</tr>
<tr>
<th>
  <%= t('view.status') %>
</th>
<td>
  <%= @task.aasm.human_state %>
</td>
</tr>
<tr>
<th>
  <%= t('view.priority') %>
</th>
<td>
  <%= @task.priority %>
</td>
</tr>
<tr>
<th>
  <%= t('view.label') %>
</th>
<td>
  <% @task.label_ids.each do |label| %>
  <label style="background-color:lightblue"><%= Label.find(label).name %></label>
  <% end %>
</td>
</tr>
<tr>
<th>
  <%= t('view.files') %>
</th>
<td>
  <% if @task.files.attached? %>
    <% @task.files.each do |file| %>
      <%= link_to file.filename, file, target: '_blank' %>
      <br>
    <% end %>
  <% end %>
</td>
</tr>
</table>
<%= link_to '編集', edit_task_path(@task), class: "btn btn-outline-dark btn-sm"  %>
<%= link_to '戻る', :back, class: "btn btn-outline-dark btn-sm"  %>
