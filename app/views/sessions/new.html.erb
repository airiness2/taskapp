<h4><%= t('view.login') %></h4>

<div class="form-group">
<%= form_with(scope: :session, url: sessions_path, local: true) do |form| %>

  <div class="field">
    <%= form.label t('view.email') %>
    <%= form.email_field :email, class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label t('view.password') %>
    <%= form.password_field :password, class: "form-control"  %>
  </div>

<br>
  <div class="actions">
    <%= form.submit t('view.login'), class: "btn btn-primary" %>
  </div>
<% end %>
</div>


<%= link_to '戻る', tasks_path, class: "btn btn-outline-dark btn-sm"  %>
