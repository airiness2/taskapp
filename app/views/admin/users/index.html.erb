
<h4><%= t('view.user') %><%= t('view.index') %></h4>
<div style="text-align: right">
<%= link_to 'ユーザ新規作成', new_admin_user_path, class: "btn btn-dark btn-sm"  %>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= t('view.username') %></th>
      <th><%= t('view.email') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to '詳細', admin_user_path(user) %></td>
        <td><%= link_to '編集', edit_admin_user_path(user) %></td>
        <td><%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
