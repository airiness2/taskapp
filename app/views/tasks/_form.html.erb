<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> が存在しているため保存出来ません:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :detail %>
    <%= form.text_area :detail %>
  </div>

  <div class="field">
    <%= form.label :endtime %>
    <%= form.datetime_select :endtime %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, [["未着手", "waiting"], ["着手中", "doing"],  ["完了", "done"]] %>


  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
